#
# Amazon Web Services
#

# Paths needed for AWS EC2, AWS IAM, etc
#export JAVA_HOME="/Library/Java/Home/"
export JAVA_HOME="$(/usr/libexec/java_home)"
export EC2_HOME="/usr/local/Cellar/ec2-api-tools/1.5.2.5/jars"
export EC2_AMITOOL_HOME="/usr/local/Cellar/ec2-ami-tools/1.3-45758/jars"
export AWS_CLOUDFORMATION_HOME="/usr/local/Cellar/aws-cfn-tools/1.0.9/jars"
export AWS_CLOUDWATCH_HOME="/usr/local/Cellar/cloud-watch/1.0.12.1/jars"
export AWS_ELASTICACHE_HOME="/usr/local/Cellar/aws-elasticache/1.5.0/jars"
export AWS_ELB_HOME="/usr/local/Cellar/elb-tools/1.0.17.0/jars"
export AWS_IAM_HOME="/usr/local/Cellar/aws-iam-tools/1.4.0/jars"
export AWS_RDS_HOME="/usr/local/Cellar/rds-command-line-tools/1.3.003/jars"
export AWS_AUTO_SCALING_HOME="/usr/local/Library/LinkedKegs/auto-scaling/jars"
export SERVICE_HOME="$AWS_CLOUDWATCH_HOME"

# EC2 credentials
#export EC2_PRIVATE_KEY=~/.aws/assistly/pk-production.pem
#export EC2_CERT=~/.aws/assistly/cert-production.pem
export EC2_PRIVATE_KEY=~/.ec2/default.key
export EC2_CERT=~/.ec2/default.crt

# IAM credentials
#export AWS_CREDENTIAL_FILE=$HOME/.aws/assistly/credentials-master
export AWS_CREDENTIAL_FILE=$HOME/.aws/assistly/credentials-master-david
#export AWS_CREDENTIAL_FILE=$HOME/.aws/assistly/credentials-production
#export AWS_CREDENTIAL_FILE=$HOME/.aws/cloudartisan/credentials

# Default EC2 URL: US East
export EC2_URL=https://ec2.us-east-1.amazonaws.com

# Mostly used by stuff I've written
read -r AWS_ACCESS_KEY_ID < $HOME/.aws/assistly/access-key-id
export AWS_ACCESS_KEY_ID
read -r AWS_SECRET_ACCESS_KEY < $HOME/.aws/assistly/secret-access-key
export AWS_SECRET_ACCESS_KEY
