#!/bin/sh

export WORKING_DIR=${HOME}/Git/assistly/assistly
cd $WORKING_DIR

tmux start-server
tmux new-session -d -s DESKPRODBE -n work

tmux new-window -tDESKPRODBE:1 -n be1
tmux new-window -tDESKPRODBE:2 -n be2
tmux new-window -tDESKPRODBE:3 -n be3
tmux new-window -tDESKPRODBE:4 -n be4

tmux send-keys -tDESKPRODBE:0 "cd $WORKING_DIR && git checkout master" C-m
tmux send-keys -tDESKPRODBE:1 "cd $WORKING_DIR && production_ssh_me_be1" C-m
tmux send-keys -tDESKPRODBE:2 "cd $WORKING_DIR && production_ssh_me_be2" C-m
tmux send-keys -tDESKPRODBE:3 "cd $WORKING_DIR && production_ssh_me_be3" C-m
tmux send-keys -tDESKPRODBE:4 "cd $WORKING_DIR && production_ssh_me_be4" C-m

tmux select-window -tDESKPRODBE:0
tmux attach-session -d -tDESKPRODBE
