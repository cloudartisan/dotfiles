#!/bin/bash

# Exit on error
set -e

echo "==> Setting up Vim configuration"

# Ensure Vim is installed
if type brew &>/dev/null; then
  if ! brew list vim &>/dev/null; then
    echo "Installing Vim via Homebrew..."
    brew install vim
  else
    echo "Vim is already installed"
  fi
fi

# Create .vim directory if it doesn't exist
mkdir -p ${HOME}/.vim

# Install vim-plug plugin manager
echo "Installing vim-plug..."
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# Clone dotvim repository
echo "Fetching dotvim configuration..."
curl -Lso - https://github.com/cloudartisan/dotvim/tarball/master \
    | tar --strip-components 1 -C $HOME/.vim -zvxf -

# Create symlinks
ln -sf ${HOME}/.vim/vimrc ${HOME}/.vimrc
ln -sf ${HOME}/.vim/vimrc ${HOME}/.gvimrc

# Setup Git repository (for version tracking, optional)
if [ -d ${HOME}/.vim/.git ]; then
  echo "Git repository already exists in .vim directory"
else
  echo "Initializing Git repository in .vim directory..."
  cd ${HOME}/.vim
  git init
fi

# Install plugins
echo "Installing Vim plugins..."
vim "+PlugInstall" "+qall"

echo "âœ“ Vim configuration complete"
