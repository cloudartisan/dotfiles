#
# Amazon Web Services
#

# Paths needed for AWS EC2, AWS IAM, etc
export JAVA_HOME=/Library/Java/Home
export EC2_HOME=$HOME/AWS/ec2-api-tools
export AWS_IAM_HOME=$HOME/AWS/IAMCli
export AWS_ELB_HOME=$HOME/AWS/ElasticLoadBalancing
export AWS_RDS_HOME=$HOME/AWS/RDSCli
export AWS_CLOUDWATCH_HOME=$HOME/AWS/CloudWatch
export AWS_AUTOSCALING_HOME=$HOME/AWS/AutoScaling
export PATH=$PATH:$EC2_HOME/bin:$AWS_IAM_HOME/bin:$AWS_ELB_HOME/bin:$AWS_RDS_HOME/bin:$AWS_CLOUDWATCH_HOME/bin:$AWS_AUTOSCALING_HOME/bin

# EC2 credentials
export EC2_PRIVATE_KEY=~/.aws/pk_david_assistly.pem
export EC2_CERT=~/.aws/cert_david_assistly.pem

# IAM credentials
export AWS_CREDENTIAL_FILE=~/.aws/david_assistly_cred.txt

# Default EC2 URL: US West
export EC2_URL=https://ec2.us-east-1.amazonaws.com
